<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rules_img"
            app:layout_constraintBottom_toTopOf="@+id/rules_scroll_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".5"
            android:contentDescription="Image Rules"
            android:scaleType="center"
            android:src="@drawable/rnm03"
            />

        <ScrollView
            android:id="@+id/rules_scroll_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rules_img"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingStart="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rules_txt"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/colorSecondary"
                android:textSize="30sp"
                android:textStyle="bold" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>